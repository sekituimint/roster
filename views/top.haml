.navbar.navbar-inverse
  .navbar-inner
    .container-fluid
      %a.brand{:href => "#{@path_prefix}/"}
        当番表
      .nav-collapse.collapse
        %ul.nav
          - @idlist.each_with_index do |id,i|
            %li
              %a{:href => "#{@path_prefix}/config/" + "#{id}"}
                #{@minilist[i]}
.row-fluid
  .span6
    %h1 美濃研究室当番表
    %br
    - @grouplist.each_with_index  do |user,i|
      %h2 #{@namelist[i]}
      - if @nillist[i] == true
        %h3 メンバーが登録されていません
        %br
        %hr
      - else
        %table{:class => "table table-hover"}
          %thead
            %tr
              %th 日程　　　　　　　　
              %th 名前　　　　　　　　
              %th 状態
          %tbody
            - if @interlist[i] == 1
              %tr{:class => "success"}
                %td #{@daylist[i][0]}  ~ #{@daylist[i][1]}
                %td
                  = user[0].name
                %td 完了
            - elsif @interlist[i] > 1
              %tr{:class => "alert-danger"}
                %td #{@daylist[i][0]}  ~ #{@daylist[i][1]}
                %td
                  = user[0].name
                %td  遅延
            - else
              %tr{:class => "info"}
                %td #{@daylist[i][0]}  ~ #{@daylist[i][1]}
                %td
                  = user[0].name
                %td 未完了
            %tr
              %td #{@daylist[i][1]} ~ #{@daylist[i][2]}
              %td
                = user[1].name
              %td 次回
            %tr
              %td #{@daylist[i][2]} ~ #{@daylist[i][3]}
              %td
                = user[2].name
              %td 次々回
        %a{:type => "button", :class=>"btn btn-default", :href =>"#{@path_prefix}/kanryou/" + "#{@idlist[i]}"}完了
        %br
        %hr
    %a{:type => "button", :class=>"btn btn-default", :href =>"#{@path_prefix}/atarashiihyou",}新規当番表作成

